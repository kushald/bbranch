<div class="container">
	<div class="row">
		<h2 style="text-align: center;color: #72BCE8;">IFSC CODE - <%= @branches.first.name %></h2>
		<% if @branches.present? %>
			<div class="col-md-12">
				<table class="table table-striped" border="2">
					<tr>
						<th>bank</th>
						<th>IFSC</th>
						<th>MICR</th>
						<th>BRANCH</th>
						<th>ADDRESS</th>
						<th>STATE</th>
						<th>DISTRICT</th>
					</tr>
					<% @branches.each do |branch| %>
						<tr>
							<td><%= branch.name %></td>
							<td><%= branch.ifsc %></td>
							<td><%= branch.micr %></td>
							<td><%= branch.branch %></td>
							<td><%= branch.address %></td>
							<td><%= branch.state %></td>
							<td><%= branch.district %></td>
						</tr>
					<% end %>
				</table>
			</div>
		<% end%>
		<div class="col-md-6" style="margin-left: 30%;"><%= paginate @branches %></div>
	</div>
</div>